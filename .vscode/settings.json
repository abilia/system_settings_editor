{
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "java.configuration.updateBuildConfiguration": "interactive",
    "spellright.language": [
        "en"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext",
        "dart"
    ],
    "spellright.parserByClass": {
        "dart": {
            "parser": "plain"
        }
    },
    "spellright.ignoreRegExps": [
        "/\\b[a-zA-Z]{2,3}\\b/" // ignores 2 and 3 letter acronyms
    ],
    "spellright.notificationClass": "hint"
}